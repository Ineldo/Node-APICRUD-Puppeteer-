<%-include ('include/_header')%>
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/" class="border-shadow">
                    <span class="text-gradient"><i class="fas fa-angle-double-left"></i>Todos Produtos</i></span>
                </a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Produto</h2>
            <span class="text-light">Actualizar o produto</span>
        </div>
        <form method="POST" action="api/link/<%products._id%>" id="update_link">
            <div class="update_link">
                <div class="form-group">
                    <label for="titulo" class="text-light">Título</label>
                    <input type="hidden" name="id" value="<%=products.id%>">
                    <input type="text" name="titulo" value="<%=products.titulo%>"placeholder="">
                </div>
                <div class="form-group">
                    <label for="url" class="text-light">Link</label>
                    <input type="text" name="url" value="<%=products.url%>"placeholder="">
                </div>
                <div class="form-group">
                    <label for="descricao" class="text-light">Descrição</label>
                    <input type="text" name="descricao" value="<%=products.descricao %>" placeholder="">
                </div>
                <div class="form-group">
                    <label for="picture" class="text-light">Upload foto</label>
                    <input type="file" name="picture"><br>
                  </div>
                  
                <div class="form-group">
                    <label for="preco" class="text-light">Preco</label>
                    <input type="text" name="preco" value="<%=products.preco %>" placeholder="">
                </div>
            </div>
            
            <div class="form-group">
                <button class="btn text-dark update"type="submit">Salvar</button>
            </div>
        </form>

    </div>
</main>

<%-include ('include/_footer')%>